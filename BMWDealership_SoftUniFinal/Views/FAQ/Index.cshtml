@model List<(string Question, string Answer)>

@{
    ViewData["Title"] = "FAQ";
}

<h2>Frequently Asked Questions</h2>

<div class="faq-list">
    @foreach (var faq in Model)
    {
        <div class="faq-item">
            <h4>@faq.Question</h4>
            <p>@faq.Answer</p>
        </div>
    }
</div>

<style>
    .faq-list {
        max-width: 800px;
        margin: auto;
    }

    .faq-item {
        border-bottom: 1px solid #ccc;
        padding: 10px 0;
    }

        .faq-item h4 {
            margin-bottom: 5px;
            color: #333;
        }

        .faq-item p {
            margin: 0;
            color: #555;
        }
</style>
